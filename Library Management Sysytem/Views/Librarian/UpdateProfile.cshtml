@model Library_Management_Sysytem.Context.Librarian

@{
    ViewBag.Title = "UpdateProfile";
    Layout = "~/Views/Shared/_Librarian-Layout.cshtml";

}


@using (Html.BeginForm("UpdateProfiles", "Librarian", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-horizontal">
        <h4>Librarian</h4>
        <hr />
        @Html.HiddenFor(model => model.IdLibrarian)
        <div class="form-group">
            <label>Name</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.LiName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.LiName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Phone</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Email</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Username</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Password</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label for="ImgFile">Current Picture</label>
            <div class="col-md-10 mb-2">
                @if (!string.IsNullOrEmpty(Model.ImgFile))
                {
                    <img src="@Url.Content(Model.ImgFile)" alt="Profile Picture" style="width:150px; height:150px; object-fit:cover;" />
                }
                else
                {
                    <p>No image uploaded.</p>
                }
            </div>

            <label for="ImageFile">Upload New Picture</label>
            <div class="col-md-10">
                <input type="file" name="ImageFile" class="form-control" />
                @Html.ValidationMessage("ImageFile", "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>
}
