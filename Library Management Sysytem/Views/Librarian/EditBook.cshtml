@model Library_Management_Sysytem.Context.Book
@{
    ViewBag.Title = "EditBook";
    Layout = "../Shared/_Librarian-Layout.cshtml";
}

@using (Html.BeginForm("EditBooks", "Librarian", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="justify-content-center d-flex align-content-center m-5">
        <div class="card " style="width:300px;">
            <div class="card-header">
                <h1>Edit Book</h1>
            </div>
            @Html.HiddenFor(model => model.BookID)
            <div class="card-body">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label>Book Name</label>
                        <div class="">
                            @Html.EditorFor(x => x.Name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(x => x.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Author</label>
                        <div class="">
                            @Html.EditorFor(x => x.Author, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(x => x.Author, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Language</label>
                        <div class="">
                            @Html.EditorFor(x => x.Language, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(x => x.Language, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="File">Current Picture</label>
                        <div class="col-md-10 mb-2">
                            @if (!string.IsNullOrEmpty(Model.File))
                            {
                                <img src="@Url.Content(Model.File)" alt="Book Picture" style="width:150px; height:150px; object-fit:cover;" />
                            }
                            else
                            {
                                <p>No image uploaded.</p>
                            }
                        </div>

                        <label for="ImageFile">Upload New Picture</label>
                        <div class="col-md-10">
                            <input type="file" name="File" class="form-control" />
                            @Html.ValidationMessage("ImageFile", "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group mt-2">
                        <div class="text-center">
                            <input type="submit" value="Submit" class="btn btn-success" />
                        </div>
                    </div>
                    <hr />
                    <div class="text-center">
                        <a class="btn btn-primary" href="@Url.Action("LibrarianBook","Librarian")">Back To List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


